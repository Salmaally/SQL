--Create a store database
CREATE TABLE store(id integer primary key,name text,item text,prices integer,rating integer);
INSERT INTO store VALUES (1,'shirts','clothing',20,2),
INSERT INTO store VALUES (2,'pants','clothing',25,3),
INSERT INTO store VALUES (3,'glasses','accesories',15,4),
INSERT INTO store VALUES (4,'belt','accesories',18,5),
INSERT INTO store VALUES (5,'jacket','clothing',22,6),
INSERT INTO store VALUES (6,'blouse','clothing',30,1)
;
--display database ordered by price.
SELECT*FROM store
ORDER BY prices asc;
--whats the avg price of items in clothing section? 
SELECT AVG(clothing) "avg item of cloothing" price FROM store
WHERE section = 'clothing'

